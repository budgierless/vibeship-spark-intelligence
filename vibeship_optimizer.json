{
  "version": 1,
  "commands": {
    "test": "python -m pytest -q tests/test_pipeline_health.py",
    "build": "",
    "lint": ""
  },
  "timings": [
    {
      "name": "pipeline_health",
      "cmd": "python -m pytest -q tests/test_pipeline_health.py",
      "runs": 1,
      "timeout_s": 900
    },
    {
      "name": "advisory_delta",
      "cmd": "python scripts/advisory_controlled_delta.py --rounds 40 --label optimizer --force-live",
      "runs": 1,
      "timeout_s": 1200
    }
  ],
  "size_paths": [
    "lib",
    "scripts",
    "docs"
  ],
  "http_probes": [],
  "review": {
    "recommended": true,
    "require_attestation": true,
    "enforce_recommended_modes": true,
    "allowed_modes": {
      "codex": [
        "xhigh",
        "high"
      ],
      "claude": [
        "plan"
      ]
    },
    "recommended_tools": {
      "codex": {
        "reasoning_mode": "xhigh"
      },
      "claude": {
        "reasoning_mode": "plan"
      }
    }
  },
  "verification": {
    "min_monitor_days": 3,
    "require_clean_git": false
  },
  "project": {
    "goals": [
      "Advisory speed: reduce hot-path p50/p95 without increasing noise."
    ],
    "intents": [
      "Performance optimization",
      "Advisory system tuning"
    ],
    "languages": [
      "python",
      "typescript"
    ],
    "python_ignore_deps": [
      "pyyaml"
    ]
  }
}

